<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 
  <!-- pressed -->
  <item android:state_pressed="true" >
    <shape>
      <stroke android:width="1px" android:color="@color/edittext_color_shape_pressed" /><!-- 95618d-->
      <corners android:radius="18dp" />
      <gradient android:startColor="#66b92f9c" android:endColor="#66525db9" android:angle="270" />
      
      <!-- gradient android:startColor="#663787ff" android:endColor="#662f72d7" android:angle="270" /-->
      <corners android:radius="3dp" />
    </shape>
  </item>
 
  <!-- focused -->
  <item android:state_focused="true" >
    <shape>
      <stroke android:width="1px" android:color="@color/edittext_color_shape_focused" />
      <corners android:radius="18dp" />
      <gradient android:startColor="#66bdb8ff" android:endColor="#66ffeba8" android:angle="270" />
      <corners android:radius="3dp" />
    </shape>
  </item>
 
  <!-- default -->
  <item>
    <shape>
      <solid android:color="@color/text_background"/>
      <stroke android:width="1px" android:color="@color/edittext_color_shape" />
      <corners android:radius="3dp" />
    </shape>
  </item>
</selector>