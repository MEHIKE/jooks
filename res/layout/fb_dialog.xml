<?xml version="1.0" encoding="utf-8"?>
<!-- This file is /res/layout/prompt_dialog.xml, add_title_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="10dip" 
    android:color="@android:color/transparent"
    
    >

<TextView
        android:id="@+id/fbtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:text="Saada andmed Facebooki"
        android:textSize="@dimen/text_size_gigant"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView 
        android:layout_height="4dip"
        android:layout_width="match_parent"
        android:src="@drawable/line_separator_hor"
         
        />


    <TextView
        android:id="@+id/fbmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:text="Andmed: "
        android:textSize="@dimen/text_size_normal"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Facebooki"
            android:textColor="#4a59cb"
            android:padding="20dip"
            
            >
        </Button>

        <Button android:id="@+id/btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Ei saada"
            android:textColor="#4a59cb"
            android:padding="20dip"
            
            >
        </Button>


    </LinearLayout>

</LinearLayout>